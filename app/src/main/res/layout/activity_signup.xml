<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#78909C"
tools:context="bidmart.fyp.pk.bidmartpk.Signup">

    <EditText
        android:id="@+id/signup_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:layout_below="@+id/signup_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"/>


<EditText
    android:id="@+id/signup_email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:textColor="#ffffff"
    android:hint="Email"
    android:inputType="textEmailAddress"
    android:paddingTop="10dp"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="97dp"
    android:layout_below="@+id/signup_name"
    android:layout_alignLeft="@+id/signup_name"
    android:layout_alignStart="@+id/signup_name"
    android:layout_centerHorizontal="true"
    android:layout_alignRight="@+id/signup_pass"
    android:layout_alignEnd="@+id/signup_pass" />

<Button
    android:id="@+id/bt_signup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Signup"
    android:background="@color/colorAccent"
    android:layout_marginTop="99dp"
    android:layout_below="@+id/signup_phoneNo"
    android:layout_alignRight="@+id/signup_phoneNo"
    android:layout_alignEnd="@+id/signup_phoneNo"
    android:layout_centerHorizontal="true"
    android:layout_alignLeft="@+id/signup_phoneNo"
    android:layout_alignStart="@+id/signup_phoneNo" />

<Button
    android:id="@+id/main_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Already a member? Login"
    android:textColor="#ffffff"
    android:background="@null"

    android:layout_marginTop="57dp"
    android:layout_below="@+id/bt_signup"
    android:layout_alignLeft="@+id/bt_signup"
    android:layout_alignStart="@+id/bt_signup"
    android:layout_alignRight="@+id/bt_signup"
    android:layout_centerHorizontal="true"
    android:layout_alignEnd="@+id/bt_signup" />

<EditText
    android:id="@+id/signup_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    android:ems="10"
    android:hint="Name"
    android:textColor="#ffffff"
    android:inputType="textPersonName"
    android:paddingTop="10dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="20dp"
    android:layout_centerHorizontal="true"
    android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/c_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:layout_below="@+id/signup_pass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

<EditText
    android:id="@+id/signup_phoneNo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#ffffff"
    android:ems="10"
    android:hint="+923XXXXXXXXX"
    android:inputType="phone"
    android:layout_marginRight="20dp"
    android:layout_below="@+id/c_password"
    android:layout_alignLeft="@+id/c_password"
    android:layout_alignStart="@+id/c_password"
    android:layout_centerHorizontal="true"
    />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tos"
        android:layout_below="@+id/signup_phoneNo"
        android:layout_alignLeft="@+id/signup_phoneNo"
        android:layout_alignStart="@+id/signup_phoneNo"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/check_tos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signup_phoneNo"
        android:layout_alignStart="@+id/signup_phoneNo"
        android:layout_alignTop="@+id/textView"

        />


</RelativeLayout>
